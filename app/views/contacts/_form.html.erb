<%= form_for(@contact ) do |f| %>
   <% if @contact.errors.any? %>
   <div id="error_explanation">
     <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this message from being saved:</h2>

     <ul>
     <% @contact.errors.full_messages.each do |message| %>
       <li><%= message %></li>
     <% end %>
     </ul>
   </div>
   <% end %>
   <div class="form-group">

     <%= f.text_field :email, class:"form-control",placeholder:"Enter your email." %>
   </div>
   <div class="form-group">

     <%= f.text_field :name, class:"form-control", placeholder:"Enter your name." %>
   </div>
   <div class="form-group">
     <%= f.text_area :message, class:"form-control", placeholder:"Enter your feedback.", rows: 5 %>
   </div>
   <div class="clearfix"></div>
   <div class="form-group">
     <div class="col-lg-12 text-center">
       <%= f.submit "Send", class: "btn btn-primary" %>
     </div>
   </div>

<% end %>
