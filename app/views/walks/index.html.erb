<p id="notice"><%= notice %></p>

<h1>Walks</h1>

<table>
  <thead>
    <tr>
      <th>Start address</th>
      <th>End address</th>
      <th>Start Long/Lat</th>
      <th>End Long/Lat</th>
      <th>Fatalities</th>
      <th>Crime</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @walks.each do |walk| %>
      <tr>
        <td><%= walk.start_location.address unless walk.start_location.nil? %></td>
        <td><%= walk.end_location.address unless walk.end_location.nil?%></td>
        <td><%= walk.start_location.longitude unless walk.start_location.nil? %> - <%= walk.start_location.latitude unless walk.start_location.nil?%></td>
        <td><%= walk.end_location.longitude unless walk.end_location.nil? %> - <%= walk.end_location.latitude unless walk.end_location.nil? %></td>
        <td><%= walk.fatalities %></td>
        <td><%= walk.crime %></td>
        <td><%= link_to 'Show', walk %></td>
        <td><%= link_to 'Edit', edit_walk_path(walk) %></td>
        <td><%= link_to 'Destroy', walk, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Walk', new_walk_path %>
