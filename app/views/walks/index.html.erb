<div class="container">
  <header>
     <div class="col-lg-12 text-center">
         <div class="yourWalks-header header-content-inner pt-2">
             <h1 style="font-family:'Rock Salt', cursive;">Your Walks!</h1>
             <hr>
         </div>
     </div>
  </header>
  <br>
  <div class="row">
    
    <% @walks.each do |walk| %>
      <div class="col-md-4">
        <div class="card text-center">
          <div class="card-block">
            <h4 class="card-title">Start address: <%=  walk.start_location.address %></h4>
            <h6 class="card-subtitle mb-2 text-muted">End address: <%=  walk.end_location.address %></h6>
            <div class="btn-group" role="group" >
              <%= link_to fa_icon("eye"), walk, class:"card-link btn btn-primary" %>
              <%= link_to fa_icon("edit"), edit_walk_path(walk), class:"card-link btn btn-info" %>
              <%= link_to fa_icon("trash"), walk, method: :delete, data: { confirm: 'Are you sure?' }, class:"card-link btn btn-danger" %>
            </div>  
          </div>
        </div>
      </div>  
    <% end %>
  </div>
  <br>
  <div class="col-md-6 offset-md-3">
    <%= link_to 'New Walk', new_walk_path, class:"btn btn-outline-success btn-block" %>
  </div>
</div>  

