<!DOCTYPE html>
<html>
  <head>
    <title>Walking</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <!-- Material Design fonts -->
  <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Roboto:300,400,500,700">
  <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/icon?family=Material+Icons">
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>

<nav class="navbar navbar-default navbar">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
        <span class="icon-bar"><%= link_to 'Home', root_path %></span>
          <% if user_signed_in? %>
        <span class="icon-bar"><%= link_to 'New Walk', new_walk_path %></span>
        <span class="icon-bar"><%= link_to "Logout", destroy_user_session_path, method: :delete %></span>
        <% else %>
        <span class="icon-bar"><%= link_to "Sign up", new_user_registration_path %></span>
        <span class="icon-bar"><%= link_to "Login", new_user_session_path %></span>
        <span class="icon-bar"><%= link_to "Sign in with Google", user_google_oauth2_omniauth_authorize_path %></span>
        <% end %>

      <a class="navbar-brand" href="#"><i class="material-icons white-text">transfer_within_a_station</i></a>
    </div>
  </div>
</nav>
    <div class="container-fluid">

      <% if !notice.nil? %>
    <div class="alert alert-info" role="alert"><%= notice %></div>
    <% end %>
    <% if !alert.nil? %>
    <div class="alert alert-danger" role="alert"><%= alert %></div>
    <% end %>
    <%= yield %>

  </div>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA5xQYBkfGUCndDrVrcUEgMw6ldd5puQ_0&services=geocoding&libraries=places,visualization">
  </script>
  <script src="https://developers.google.com/maps/documentation/javascript/examples/markerclusterer/markerclusterer.js">
  </script>


  </body>
</html>
